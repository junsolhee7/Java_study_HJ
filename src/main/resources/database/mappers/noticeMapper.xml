<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
<mapper namespace="com.iu.home.board.notice.NoticeDAO">

	<select id="getList" resultType="NoticeDTO">
		SELECT * FROM NOTICE ORDER BY NUM ASC
	</select>
	
	<select id="getDetail" parameterType="NoticeDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}
	</select>
	
	<insert id="setNotice" parameterType="NoticeDTO">
		INSERT INTO BANKBOOK VALUES(#{bookNum},#{bookName},#{bookRate},1,#{bookContents})
	</insert>
	
	<update id="setUpdate" parameterType="NoticeDTO">
		UPDATE NOTICE SET
		NUM = #{num}, TITLE = #{title}, CONTENTS = #{contents},
		WRITER = #{writer}, REGDATE = #{regDate}, HIT = #{hit}
		WHERE NUM = #{num}
	</update>
	
	<delete id="setDelete" parameterType="NoticeDTO">
		DELETE NOTICE WHERE NUM = #{num}
	</delete>

</mapper>